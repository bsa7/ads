%h1
	= I18n.t :welcome_message
.ads_list
	- @classified_ads.each do |ad|
		.ad_item
			%a{href: "/ad/#{ad.id}"}
				- if ad.images.first
					%img{class: "index_image_preview", src: "/system/uploads/#{ad.images.first.filename}"}
				= ad.plain_text.first_n_words Count_words_in_ads_preview
				.ad_created_at
					%p{"data-datetime" => ad.created_at}

